@model WebApplication1.Models.Account.Newsletter
@{
    ViewBag.Title = "Newsletter";
}

<h2>Lettre d'information :</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Objet)*<br />
        @Html.TextBoxFor(m => m.Objet, new {  @class = "form-control my-2", @required = "required"  })
       
        @Html.Label("DateCreated", "Date : "+DateTime.Now.ToString("dd MMM yyyy HH:mm"), new { @readonly = "readonly" })    
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contenu)*<br />
        @Html.TextAreaFor(m => m.Contenu, new {  @class = "form-control tinymce", @required = "required"  })
    </div>
    <div class="form-actions no-color">
        <input type="submit" value="Envoyer" class="button button-bluedark" />
    </div>
}

@*Script permettant l'utilisation de l'outil de modification de la forme du message lié aux newsletter*@
