@model WebApplication1.Models.Account.Newsletter
@{
    ViewBag.Title = "Newsletter";
}

<h2>Newsletter</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Objet)*<br />
        @Html.TextBoxFor(m => m.Objet, new {  @class = "form-control my-2", @required = "required"  })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Contenu)*<br />
        @Html.TextAreaFor(m => m.Contenu, new {  @class = "form-control my-2", @required = "required"  })
    </div>
    <div class="form-actions no-color">
        <input type="submit" value="SendNewsletter" class="btn btn-default btn-primary" />
    </div>
}