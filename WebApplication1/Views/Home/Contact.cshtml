@model WebApplication1.Models.Compte.Feedback
@{
    ViewBag.Title = "Feedback";
}
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <br />
        <p>Nom:</p>
        <p>@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })</p>
        <p>Mail:</p>
        <p>@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", type = "email" })</p>
        <p>Message:</p>
        <!--<p>@Html.TextAreaFor(m => m.Comment, new { @class = "form-control", @required = "required", @cols = 80, @rows = 10 })</p>-->
        @Html.TextAreaFor(m => m.Comment)
        <button type="submit" value="Create" class="btn btn-secondary">Envoyer</button>
    </div>
}

