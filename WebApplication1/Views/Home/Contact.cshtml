@model WebApplication1.Models.Compte.Feedback

@{
    ViewBag.Title = "Contact";
}
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <br />
        <div style="display:flex;width:100%;justify-content:space-around">
            <div>
                <p>Nom:</p>
                <p>@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required" })</p>
                <p>Mail:</p>
                <p>@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", type = "email" })</p>
                <p>Message:</p>
                @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", @required = "required", @cols = 80, @rows = 10, @style = "margin: 0px; height: 219px; width: 317px;" })
                <button type="submit" value="Create" class="btn btn-secondary">Envoyer</button>
            </div>
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3309.765019177911!2d3.1008611737627265!3d45.76779241986469!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f71bf527f9a57b%3A0x2df926ae3d326c8b!2sC4C+Consulting!5e0!3m2!1sfr!2sfr!4v1510239009277" width="600" height="450" frameborder="0" style="border:0" allowfullscreen=""></iframe>
        </div>
    </div>
}

<script src="~/scripts/tinymce/tinymce.min.js" type="text/javascript"></script>
