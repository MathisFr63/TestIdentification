<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body class="fondGradientGris">
    <div class="navbar navbar-inverse navbar-fixed-top">
        @Html.ActionLink("Easy Bill", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div class="pull-right">
            <ul class="nav navbar-nav">
                @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <li style="float:right;"><a href=@Url.Action("Deconnexion", "Login")><span class="glyphicon glyphicon-off"></span></a></li>
                    <li style="float:right;"><a style="color:white">Bonjour toi</a></li>
                }
                else
                {
                    <li style="float:right;"><a href=@Url.Action("Index", "Login")><span class="glyphicon glyphicon-off"></span></a></li>
                }
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        @if (System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
        {
            <nav class="col-sm-3 col-md-1 hidden-xs-down sidebar menu" style="padding-left:0px">
                <ul class="nav pull-left">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Utilisateurs", "Index", "Utilisateurs")</li>
                    <li>@Html.ActionLink("Clients", "Index", "Clients")</li>
                    <li>@Html.ActionLink("Fournisseurs", "Index", "Fournisseurs")</li>
                    <li>@Html.ActionLink("Devis", "Index", "Devis")</li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Factures</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Avoirs</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Acomptes</a></li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <br/>
                <div class="container body-content ">
                    @RenderBody()
                    <hr />
                </div>
            </main>
        }
        else
        {
            <main>
                <br />
                <div class="container body-content ">
                    @RenderBody()
                    <hr />
                </div>
            </main>
        }
        </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>