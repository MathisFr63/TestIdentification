@model WebApplication1.Models.Entite.Entreprise
@{
    ViewBag.Title = @Html.DisplayFor(model => model.NomEntreprise) + " (  fournisseur )";
}
<br/>
<p>
    <a href=@Url.Action("Index","Fournisseurs") class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-arrow-left" />
    </a>
    <a href=@Url.Action("Edit","Fournisseurs",new { id = Model.ID }) class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-pencil" />
    </a>
</p>
<br/>
<h3 class="">Informations sur le fournisseur :</h3>
<br/>
<div class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p class="lead">Nom de l'entreprise : @Html.DisplayFor(model => model.NomEntreprise)</p>
            </div>

            <div class="col-md-6">
                <p class="lead">Nom du contact : @Html.DisplayFor(model => model.NomContact)</p>
            </div>

            <div class="col-md-6">
                <p class="lead">Mail : @Html.DisplayFor(model => model.Mail)</p>
            </div>
        </div>
    </div>
</div>
