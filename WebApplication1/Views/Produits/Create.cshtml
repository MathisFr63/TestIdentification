@*Vue permettant la création d'un produit*@
@model WebApplication1.Models.Papiers.Produit

@{
    ViewBag.Title = "Create";
}


@*Chemin de retour*@
<ul class="breadcrumb" style="margin-bottom:0px;margin-top:0px">
    <li class="breadcrumb-item">
        <a href=@Url.Action("Index", "Produits")>Liste produits</a>
    </li>
    <li class="breadcrumb-item active">Créer produit</li>
</ul>


@*Formulaire permettant de remplir les champs avant de créer le produit*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*titre de la partie*@
        <h2 class="titreCRUD">Créer un produit</h2>
        <hr class="separer" />
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @*Div permettant de saisir le nom du produit (libellé)*@
        <div class="form-group">
            @Html.LabelFor(model => model.Libelle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Libelle, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Libelle, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Div permettant d'ajouter un commentaire au produit*@
        <div class="form-group">
            @Html.LabelFor(model => model.Détails, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Détails, new { @class = "form-control textAreaCSS" })
                @Html.ValidationMessageFor(model => model.Détails, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Div permettant de saisir le nom du produit (libellé)*@
        <div class="form-group">
            @Html.LabelFor(model => model.UrlImage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UrlImage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UrlImage, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Div permettant de saisir le prix hors taxes du produit*@
        <div class="form-group">
            @Html.LabelFor(model => model.PrixHT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PrixHT, new { htmlAttributes = new { @class = "form-control", min = 0, @required = "required" } })
                @Html.ValidationMessageFor(model => model.PrixHT, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Div permettant de saisir la réduction en cours sur le produit*@
        <div class="form-group">
            @Html.LabelFor(model => model.Reduction, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Reduction, new { htmlAttributes = new { @class = "form-control", min = 0, @required = "required" } })
                @Html.ValidationMessageFor(model => model.Reduction, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Div permettant de saisir le taux de TVA du produit*@
        <div class="form-group">
            @Html.LabelFor(model => model.TVA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TVA, new { htmlAttributes = new { @class = "form-control", min = 0, max = 100, @required = "required" } })
                @Html.ValidationMessageFor(model => model.TVA, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Div permettant de saisir le type de produit (bien ou service)*@
        <div class="form-group">
            @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Type, htmlAttributes: new { @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>


        @*Div permettant d'ajouter d'autres informations au produit*@
        <div class="form-group">
            @Html.LabelFor(model => model.OtherInfo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.OtherInfo, new { @class = "form-control textAreaCSS" })
                @Html.ValidationMessageFor(model => model.OtherInfo, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        @*Bouton permettant de valider la création du produit*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="button button-green">Ajouter</button>
            </div>
        </div>
    </div>
    <br />
    <br />
}

