@model WebApplication1.Models.Compte.Utilisateur

@{
    ViewBag.Title = "Details";
}

<br />

@if (Model.Type == 0)
{
<p>
    <a href=@Url.Action("Edit", "Utilisateurs", new { id = Model.ID }) class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-pencil" />
    </a>
</p>
}

<br />
<h3 class="">Informations sur @Html.DisplayFor(model => model.Mail) :</h3>
<br />

<div class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p class="lead">Prénom : @Html.DisplayFor(model => model.Prénom )</p>
            </div>
            <div class="col-md-6">
                <p class="lead">Nom : @Html.DisplayFor(model => model.Nom)</p>
            </div>
            <div class="col-md-6">
                <p class="lead">Type : @Html.DisplayFor(model => model.Type)</p>
            </div>

        </div>
    </div>
</div>
