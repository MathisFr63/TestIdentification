@model WebApplication1.Models.Account.Utilisateur

@{
    ViewBag.Title = "Details";
}

<br />

@if (Model.Type == 0)
{
<p>
    <a href=@Url.Action("Edit", "Utilisateurs", new { id = Model.ID.Replace('.', '~') }) class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-pencil" />
    </a>
</p>
}

<br />
<h3 class="">Informations sur @Html.DisplayFor(model => model.Prénom) @Html.DisplayFor(model => model.Nom) :</h3>
<br />
<br />

<div class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p class="lead">Mail : @Html.DisplayFor(model => model.ID)</p>
            </div>
            <div class="col-md-6">
                <p class="lead">Prénom : @Html.DisplayFor(model => model.Prénom )</p>
            </div>
            <div class="col-md-6">
                <p class="lead">Nom : @Html.DisplayFor(model => model.Nom)</p>
            </div>
            <div class="col-md-6">
                <p class="lead">Vous êtes @Html.DisplayFor(model => model.Type)</p>
            </div>
            <div class="col-md-6">
                <p class="lead">Vous avez réalisé @ViewBag.NbDevis devis.</p>
            </div>
            <div class="col-md-6">
                <p class="lead">Vous avez facturé @ViewBag.NbFactures devis.</p>
            </div>
            <div class="col-md-6">
                <p class="lead">Vous avez une liste de @ViewBag.NbProduits produits.</p>
            </div>
        </div>
    </div>
</div>