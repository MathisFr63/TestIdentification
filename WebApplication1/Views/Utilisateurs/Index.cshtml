@model IEnumerable<WebApplication1.Models.Account.Utilisateur>


@{
    ViewBag.Title = "Utilisateurs";
}
<p>
    <a href=@Url.Action("Create", "Utilisateurs") class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-plus" />
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MotDePasse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prénom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotDePasse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prénom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a href=@Url.Action("Edit", "Utilisateurs", new { id = item.ID }) class="btn btn-info">
                    <span class="glyphicon glyphicon-pencil" />
                </a>
                <a href=@Url.Action("Details", "Utilisateurs", new { id = item.ID }) class="btn btn-info">
                    <span class="glyphicon glyphicon-print" />
                </a>
                <a href=@Url.Action("Delete", "Utilisateurs", new { id = item.ID }) class="btn btn-info">
                    <span class="glyphicon glyphicon-trash" />
                </a>
            </td>
        </tr>
    }
</table>