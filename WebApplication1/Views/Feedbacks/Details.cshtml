@*Vue permettant d'afficher les détails du feedback*@
@model WebApplication1.Models.Account.Feedback

@{
    ViewBag.Title = "Details";
}


@*Chemin de retour*@
<ul class="breadcrumb" style="margin-bottom:0px;margin-top:0px">
    <li class="breadcrumb-item">
        <a href=@Url.Action("Index","Feedbacks")>Liste feedbacks</a>
    </li>
    <li class="breadcrumb-item active">Information feedback</li>
</ul>

@*Affichage de : "Informations sur <Prénom> <Nom> :"*@
<div class="titrepartie">

    <ul style="list-style: none; display:block; float: right!important; margin-bottom:0;">
        <li>
            <a title="Imprimer le feedback" target="_blank" href=@Url.Action("Print", "Devis", new { id = Model.ID }) class="btn button-blue"><span class="glyphicon glyphicon-print" /></a>
        </li>
    </ul>
    <h2 style="display:block;" class="titreCRUD">
        Informations sur le feedback
    </h2>
</div>
<hr class="separer" />
<br />

@*Div permettant d'afficher les détails du feedback*@
<div class="py-5">
    <div class="container">
        <div class="row">

            @*Affichage du sujet du feedback*@
            <div class="col-md-6">
                <p class="lead">Sujet : @Html.DisplayFor(model => model.Subject)</p>
            </div>

            @*Affichage de l'identifiant de l'utilisateur ayant envoyé le feedback*@
            <div class="col-md-6">
                <p class="lead">Mail : @Html.DisplayFor(model => model.UtilisateurID)</p>
            </div>

            @*Affichage du commentaire lié au feedback*@
            <div class="col-md-6">
                <p class="lead">Commentaire : @Html.DisplayFor(model => model.Comment)</p>
            </div>

            @*Affichage de l'état du feedback*@
            <div class="col-md-6">
                <p class="lead">Etat : @Html.DisplayFor(model => model.IsResolved)</p>
            </div>
        </div>
    </div>
</div>

