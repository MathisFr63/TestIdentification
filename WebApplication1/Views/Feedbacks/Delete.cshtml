@*Vue permettant de supprimer un feedback*@
@model WebApplication1.Models.Account.Feedback

@{
    ViewBag.Title = "Delete";
}

<br />
<p>
    @*Bouton de retour*@
    <a title="Retour" href=@Url.Action("Index","Feedback") class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-arrow-left" />
    </a>
</p>
<h3>Voulez-vous supprimer ce feedback ?</h3>

@*Div permettant d'afficher les détails du feedback avant de le supprimer*@
<div>
    <h4>Feedback</h4>
    <hr />
    <dl class="dl-horizontal">
        @*Affichage du sujet du feedback*@
        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>

        @*Affichage de l'identifiant de l'utilisateur ayant envoyé le feedback*@
        <dt>
            @Html.DisplayNameFor(model => model.UtilisateurID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UtilisateurID)
        </dd>

        @*Affichage du commentaire lié au feedback*@
        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

    </dl>

    @*Bouton permettant la suppression du feedback*@
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
