@*Vue permettant à l'utilisateur de modifier son mot de passe après avoir rentré le bon code de récupération*@
@model WebApplication1.ViewModels.UtilisateurViewModelConnection

@{
    ViewBag.Title = "Récupération";
}

<link rel="stylesheet" href="~/Content/theme.css">

@*Navbar permettant à l'utilisateur d'accéder à la page de connexion ou de retourner sur la page d'accueil*@
<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container">
        <a class="navbar-brand" href=@Url.Action("Index","Home")>Easy Bill</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar2SupportedContent" aria-controls="navbar2SupportedContent" aria-expanded="false" aria-label="Toggle navigation"> <span class="navbar-toggler-icon"></span> </button>
        <div class="collapse navbar-collapse text-center justify-content-end" id="navbar2SupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item mx-2">
                    <a class="nav-link" href=@Url.Action("Index","Login")>Se connecter</a>
                </li>
            </ul>
            <a class="btn navbar-btn text-white mx-2 btn-secondary" href=@Url.Action("Index","Home")>Accueil</a>
        </div>
    </div>
</nav>

@*Formulaire permettant à l'utilisateur de saisir son nouveau mot de passe et de le confirmer*@
@using (Html.BeginForm())
{
    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3"> </div>
                <div class="col-md-6">
                    <div class="card p-5">
                        <div class="card-body">
                            <h1 class="mb-4">Récupération du mot de passe réussie</h1>
                            <div>
                                <h1>Bravo !</h1>
                                @*Champs caché permettant de stocker l'adresse e-mail de l'utilisateur*@
                                @Html.HiddenFor(m => m.Utilisateur.ID)

                                @*Affichage de l'adresse e-mail de l'utilisateur*@
                                @Html.LabelFor(m => m.Utilisateur.ID)
                                @Html.DisplayFor(m => m.Utilisateur.ID)
                            </div>

                            @*Div permettant à l'utilisateur de saisir son nouveau mot de passe*@
                            <div>
                                <label>Saisir votre nouveau mot de passe</label>
                                @Html.LabelFor(m => m.motDePasse)
                                @Html.PasswordFor(m => m.motDePasse, new { @class = "form-control my-2", @required = "required" })
                                @Html.ValidationMessageFor(m => m.motDePasse, "", new { @class = "text-danger" })
                            </div>

                            @*Div permettant à l'utilsiateur de confirmer son nouveau mot de passe*@
                            <div>
                                @Html.LabelFor(m => m.confirmation)
                                @Html.PasswordFor(m => m.confirmation, new { @class = "form-control my-2", @required = "required" })
                                @Html.ValidationMessageFor(m => m.confirmation, "", new { @class = "text-danger" })
                            </div>

                            @*Bouton permettant de confirmer la modification du mot de passe*@
                            <input type="submit" class="btn btn-secondary" value="Valider" formaction="ChangePassword" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




}

