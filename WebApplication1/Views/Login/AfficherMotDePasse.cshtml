@model WebApplication1.ViewModels.UtilisateurViewModelConnection

@{
    ViewBag.Title = "Récupération";
}

<p>
    <a href=@Url.Action("Index","Login") class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-arrow-left" /> Accueil
    </a>
</p>
<h2>Récupération du mot de passe réussie</h2>

@using (Html.BeginForm())
{
    <div>
        <h1>Bravo !</h1>
        @Html.HiddenFor(m => m.Utilisateur.ID)


        @Html.LabelFor(m => m.Utilisateur.ID)
        @Html.DisplayFor(m => m.Utilisateur.ID)
    </div>
    <div>
        <h3>Saisir votre nouveau mot de passe :</h3>
        <div>
            @Html.LabelFor(m => m.motDePasse)
            @Html.PasswordFor(m => m.motDePasse)
            @Html.ValidationMessageFor(m => m.motDePasse)
        </div>
        <div>
            @Html.LabelFor(m => m.confirmation)
            @Html.PasswordFor(m => m.confirmation)
            @Html.ValidationMessageFor(m => m.confirmation)
        </div>
    </div>
    <input type="submit" class="btn btn-secondary" value="Valider" formaction="ChangePassword" />
}



<link rel="stylesheet" href="~/Content/theme.css">

<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container">
        <a class="navbar-brand" href=@Url.Action("Index","Home")>Easy Bill</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar2SupportedContent" aria-controls="navbar2SupportedContent" aria-expanded="false" aria-label="Toggle navigation"> <span class="navbar-toggler-icon"></span> </button>
        <div class="collapse navbar-collapse text-center justify-content-end" id="navbar2SupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item mx-2">
                    <a class="nav-link" href=@Url.Action("Index","Login")>Se connecter</a>
                </li>
            </ul>
            <a class="btn navbar-btn text-white mx-2 btn-secondary" href=@Url.Action("Index","Home")>Accueil</a>
        </div>
    </div>
</nav>


