@model WebApplication1.Models.Compte.Utilisateur

@{
    ViewBag.Title = "Récupération";
}

<h2>Récupération du mot de passe</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.HiddenFor(m => m.Identifiant)
        @Html.LabelFor(m => m.Question)
        @Html.DisplayFor(m => m.Question)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Réponse)
        @Html.TextBoxFor(m => m.Réponse)
        @Html.ValidationMessageFor(m => m.Réponse)
    </div>
    <input type="submit" class="btn btn-secondary" value="Valider" formaction="VérifierRéponse"/>
}