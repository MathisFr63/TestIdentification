@model WebApplication1.Models.Entite.Entreprise

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br />
    <p>
        <a href=@Url.Action("Index","Clients") class="btn btn-info btn-lg">
            <span class="glyphicon glyphicon-arrow-left" />
        </a>
    </p>

    <div class="form-horizontal">
        <h3>Créer client</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Nom de l'entreprise</label>
            @Html.EditorFor(model => model.NomEntreprise, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.NomEntreprise, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Nom du contact</label>
            @Html.EditorFor(model => model.NomContact, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.NomContact, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Mail</label>
            @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
        </div>

        <form method="post">
            <UC:UserControl runat="server" />
        </form>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-secondary" />
            </div>
        </div>
    </div>
}
