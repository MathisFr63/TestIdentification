@model WebApplication1.Models.Entite.Client
@{
    ViewBag.Title = "Delete";
}
<br />
<p>
    <a href=@Url.Action("Index","Clients") class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-arrow-left" />
    </a>
</p>
<h3>Voulez-vous supprimer ce client ?</h3>
<br/>
<div class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p class="lead">Nom : @Html.DisplayFor(model => model.Nom)</p>
            </div>
            <div class="col-md-6">
                <p class="lead">Site web : <a href="@Html.DisplayFor(model => model.SiteWeb)">@Html.DisplayFor(model => model.SiteWeb)</a></p>
            </div>
            <div class="col-md-6">
                <p class="lead">Mail : @Html.DisplayFor(model => model.Mail)</p>
            </div>

            <div class="col-md-6">
                <p class="lead">Commentaire :@Html.DisplayFor(model => model.Commentaire)</p>
            </div>

            <div class="col-md-6">
                <p class="lead">Code NAF :@Html.DisplayFor(model => model.CodeNAF)</p>
            </div>

            <div class="col-md-6">
                <p class="lead">SIREN/SIRET :@Html.DisplayFor(model => model.SIREN_SIRET)</p>
            </div>

            <div class="col-md-6">
                <p class="lead">Numéro TVA :@Html.DisplayFor(model => model.NumeroTVA)</p>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default btn-primary" />
        </div>
    }
</div>
