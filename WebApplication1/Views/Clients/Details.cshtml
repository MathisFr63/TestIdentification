@*Vue permettant d'afficher les détails d'un client*@
@model WebApplication1.Models.Entite.Entreprise
@{
    ViewBag.Title = @Html.DisplayFor(model => model.NomEntreprise) + " (  client )";
}

<br />

<p>
    @*Bouton de retour*@
    <a href=@Url.Action("Index","Clients") class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-arrow-left" />
    </a>
    @*Bouton permettant d'accéder à la modification du client*@
    <a href=@Url.Action("Edit","Clients",new { id = Model.ID }) class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-pencil" />
    </a>
</p>

<br />
<h3 class="">Informations sur le client :</h3>
<br />

@*Div permettant l'affichage des informations du client*@
<div class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p class="lead">Nom de l'entreprise : @Html.DisplayFor(model => model.NomEntreprise)</p>
            </div>

            <div class="col-md-6">
                <p class="lead">Nom du contact : @Html.DisplayFor(model => model.NomContact)</p>
            </div>

            <div class="col-md-6">
                <p class="lead">Mail : @Html.DisplayFor(model => model.Mail)</p>
            </div>
        </div>
    </div>
</div>
