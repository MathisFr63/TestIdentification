@*Vue permettant d'afficher les détails d'un devis*@
@model WebApplication1.ViewModels.DevisProduitViewModel

@{
    ViewBag.Title = "Details";
}

@*Chemin de retour*@
<ul class="breadcrumb" style="margin-bottom:0px;margin-top:0px">
    <li class="breadcrumb-item">
        <a href=@Url.Action("Index","Devis")>Liste devis</a>
    </li>
    <li class="breadcrumb-item active">Information devis</li>
</ul>

@*titre de la partie*@
<h2 class="titreCRUD">Informations sur le devis</h2>
<hr class="separer" />
<br />

<p>
    @*Bouton permettant d'accéder à la modification du devis*@
    <a href=@Url.Action("Edit","Devis",new { id = Model.Devis.ID }) class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-pencil" />
    </a>
    @*Bouton permettant de créer un pdf à par devis*@
    <a title="Imprimer" target="_blank" href=@Url.Action("Print", "Devis", new { id = Model.Devis.ID }) class="btn btn-info btn-lg">Imprimer</a>
</p>

@*Div permettant d'afficher les détails du devis*@
<div class="py-5">
    <div class="container">
        <div class="row">
            @*<div class="col-md-6">
                    <p class="lead">Client : @Html.DisplayFor(model => model.EntrepriseID)</p>
                </div>*@
            @*Div permettant d'afficher l'objet du devis*@
            <div class="col-md-6">
                <p class="lead">Objet : @Html.DisplayFor(model => model.Devis.Objet)</p>
            </div>
            @*Div permettant d'afficher la date de création du devis*@
            <div class="col-md-6">
                <p class="lead">Date : @Html.DisplayFor(model => model.Devis.Date)</p>
            </div>
            @*Div permettant d'afficher si le devis est valide ou non*@
            <div class="col-md-6">
                <p class="lead">Validité : @Html.DisplayFor(model => model.Devis.Valide)</p>
            </div>
            @*Div permettant d'afficher le commentaire lié au devis*@
            <div class="col-md-6">
                <p class="lead">Commentaire : @Html.DisplayFor(model => model.Devis.Commentaire)</p>
            </div>
            @*Div permettant d'afficher la monnaie utilisée par le devis*@
            <div class="col-md-6">
                <p class="lead">Monnaie : @Html.DisplayFor(model => model.Devis.Monnaie)</p>
            </div>
        </div>
    </div>
</div>
