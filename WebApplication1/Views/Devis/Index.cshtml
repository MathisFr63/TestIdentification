@model WebApplication1.Models.Papiers.DevisViewModel
@{
    ViewBag.Title = "Devis";
}
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="collapse navbar-collapse ">
            <form class="navbar-form navbar-left" method="get" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search" value="@ViewData[" currentFilter"]">
                </div>
                <button type="submit" value="Search" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                <button asp-action="Index" type="submit" value="cancel" class="btn btn-default"><i class="glyphicon glyphicon-remove"></i></button>
            </form>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Trier par<b class="caret"></b></a>
                    <ul class="dropdown-menu dropdown-menu-default">
                        <li><a>Date</a></li>
                        <li><a asp-action="Index" asp-route-sortOrder="@ViewData[" NameSortParm"]" asp-route-currentFilter="@ViewData[" CurrentFilter"]">Nom</a></li>
                        <li><a href="#">Nb factures</a></li>
                    </ul>
                </li>
                <li>
                    <a href=@Url.Action("Create", "Devis") class="btn btn-info btn-lg">
                        <span class="glyphicon glyphicon-plus" />
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Devis.Objet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Devis.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Devis.Valide)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Devis.Commentaire)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Devis.Monnaie)
        </th>
        <th></th>
    </tr>

    @foreach (var client in Model.Utilisateur.Clients)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => client.Nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => client.SiteWeb)
        </td>
        <td>
            @Html.DisplayFor(modelItem => client.Mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => client.Telephones)
        </td>
        <td>
            @Html.DisplayFor(modelItem => client.Commentaire)
        </td>
        <td>
            <a href=@Url.Action("Edit", "Devis", new { id = client.ID }) class="btn btn-info">
                <span class="glyphicon glyphicon-pencil" />
            </a>
            <a href=@Url.Action("Details", "Devis", new { id = client.ID }) class="btn btn-info">
                <span class="glyphicon glyphicon-print" />
            </a>
            <a href=@Url.Action("Delete", "Devis", new { id = client.ID }) class="btn btn-info">
                <span class="glyphicon glyphicon-trash" />
            </a>
        </td>
    </tr>
    }

</table>