@model WebApplication1.ViewModels.DevisProduitViewModel
@{
    Layout = null;
    ViewBag.Title = "pdf";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" />
</head>
<body>
    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-xs-6">
                    <h1>Easy Bill</h1>
                    <p>Adresse de l'entreprise utilisateur</p>
                </div>
                <div class="col-xs-6" style="text-align: right">
                    <h2>Facture</h2>
                </div>
            </div>
            
            <hr />
            
            <div class="row">
                <div class="col-xs-6">
                    <h3>Facturer à</h3>
                    <p>Nom du client</p>
                    <p>14 route de la Sauvetat</p>
                    <p>Plauzat - 63730</p>
                </div>
                <div class="col-xs-6" style="text-align: right">
                    <p><strong>Facture n° :</strong> @Model.Devis.ID</p>
                    <p><strong>Date :</strong> @Model.Devis.Date</p>
                    <p><strong>Echéance :</strong> @Model.Devis.Date.AddDays(30) </p>
                </div>
            </div>
            
            <hr />

            <div class="row">
                <div class="col-xs-6">
                    <p>Objet : @Html.DisplayFor(model => model.Devis.Objet)</p>
                    <p>Commentaire : @Html.DisplayFor(model => model.Devis.Commentaire)</p>
                    <p>Monnaie : @Html.DisplayFor(model => model.Devis.Monnaie)</p>
                </div>
            </div>

            <div class="row">
                <table class="table">
                    <tr>
                        <th>Article</th>
                        <th>Commentaire</th>
                        <th>Prix HT</th>
                        <th>Quantité</th>
                        <th>Montant total</th>
                    </tr>
                    @foreach (var item in Model.ProduitsSelected)
                    {
                        <tr>
                            <td class="col-xs-3">
                                <p>@item.Nom</p>
                            </td>
                            <td class="col-xs-4">
                                <p>@item.Commentaire</p>
                            </td>
                            <td class="col-xs-1">
                                <p>@item.PrixHT</p>
                            </td>
                            <td class="col-xs-1">
                                <p>@item.Quantite</p>
                            </td>
                            <td class="col-xs-2">
                                <p>
                                    @{var a = item.Quantite * item.PrixHT;}
                                    @a
                                </p>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>