@model WebApplication1.Models.Papiers.DevisViewModel

@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" href="http://cdn.jsdelivr.net/chosen/1.1.0/chosen.css" />
<script type="text/javascript" src="http://cdn.jsdelivr.net/chosen/1.1.0/"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br />
    <p>
        <a href=@Url.Action("Index","Devis") class="btn btn-info btn-lg">
            <span class="glyphicon glyphicon-arrow-left" />
        </a>
    </p>

    <div class="col-md-6">
        <div class="form-horizontal">

            <h3>Informations règlement:</h3>
            <hr />

            <div class="form-group">
                <label>Client</label>
                @Html.DropDownListFor(model => model.Devis.EntrepriseID, Model.Entreprises, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Devis.EntrepriseID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Objet</label>
                @Html.EditorFor(model => model.Devis.Objet, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Devis.Objet, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Commentaire</label>
                @Html.EditorFor(model => model.Devis.Commentaire, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Devis.Commentaire, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Monnaie</label>
                @Html.EnumDropDownListFor(model => model.Devis.Monnaie, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Devis.Monnaie, "", new { @class = "text-danger" })
            </div>
            <br/>
            <h3>Informations règlement:</h3>
            <hr />

            <div class="form-group">
                <label>Articles</label>
                @Html.DropDownListFor(model => model.ArticlesID, Model.Articles, new { @class = "form-control chosen-select", @multiple = "true" })
                @Html.ValidationMessageFor(model => model.Articles, "", new { @class = "text-danger" })
            </div>


            <button type="submit" value="Create" class="btn btn-secondary">Créer</button>
        </div>
        </div>
        }

        <script>
            $('.chosen-select').chosen();
        </script>
