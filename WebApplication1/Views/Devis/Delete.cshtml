@*Vue permettant de supprimer un devis*@
@model WebApplication1.Models.Papiers.Devis
@{
    ViewBag.Title = "Delete";
}
<br />
<p>
    @*Bouton de retour*@
    <a title="Retour" href=@Url.Action("Index","Devis") class="btn btn-info btn-lg">
        <span class="glyphicon glyphicon-arrow-left" />
    </a>
</p>
<h3>Voulez-vous supprimer ce devis ?</h3>
@*Div permettant d'afficher les détails avant de le supprimer*@
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Objet)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Objet)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Valide)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Valide)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Commentaire)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Commentaire)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Monnaie)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Monnaie)
        </dd>
        @*<dt>
                @Html.DisplayNameFor(model => model.EntrepriseID)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EntrepriseID)
            </dd>*@
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        //Bouton permettant de valider la suppression du produit
        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" />
        </div>
    }
</div>
